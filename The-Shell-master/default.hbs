    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "highlighter/prettify.css"}}" />
    <link rel="stylesheet" type="text/css" href="{{asset "css/screen.css"}}" />
    <link rel="icon" type="image/x-icon" href="{{asset "ico/favicon.ico"}}" />
    <link rel="stylesheet" href="/assets/css/grid12.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}

    <script>
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-71432029-1']);
    _gaq.push(['_trackPageview']);

    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();
    </script>
</head>
<body class="{{body_class}}">

